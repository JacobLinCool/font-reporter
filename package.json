{
    "name": "font-reporter",
    "version": "0.1.0",
    "description": "Generate report of a font.",
    "keywords": [
        "font",
        "report",
        "ttf",
        "otf",
        "woff",
        "woff2",
        "json",
        "html",
        "pdf"
    ],
    "author": "JacobLinCool <jacoblincool@gmail.com> (https://github.com/JacobLinCool)",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "font-reporter": "dist/index.js",
        "font-report": "dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "start": "node dist/index.js",
        "test": "jest --coverage",
        "dev": "tsup --watch",
        "build": "tsup",
        "docs": "typedoc ./src/",
        "format": "prettier --write '**/*.{js,ts,jsx,tsx,json,yml,yaml,md,html}' --ignore-path .gitignore",
        "lint": "eslint ."
    },
    "dependencies": {
        "commander": "^9.4.0",
        "fontkit": "^2.0.2",
        "puppeteer-core": "^16.1.0"
    },
    "devDependencies": {
        "@types/fontkit": "^1.8.0",
        "@types/jest": "^28.1.6",
        "@types/node": "^18.6.5",
        "@typescript-eslint/eslint-plugin": "^5.33.0",
        "@typescript-eslint/parser": "^5.33.0",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.5.0",
        "jest": "^28.1.3",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.7",
        "tsup": "^6.2.1",
        "typedoc": "^0.23.10",
        "typescript": "^4.7.4"
    },
    "homepage": "https://github.com/JacobLinCool/font-reporter#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JacobLinCool/font-reporter.git"
    },
    "bugs": {
        "url": "https://github.com/JacobLinCool/font-reporter/issues"
    }
}
